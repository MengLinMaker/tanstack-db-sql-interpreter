{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "files": {
    "maxSize": 10000000,
    "includes": [
      "**/*",
      "!**/*.js",
      "!**/node_modules",
      "!**/coverage",
      "!**/dist",
      "!.nx"
    ],
    "ignoreUnknown": true
  }
}
